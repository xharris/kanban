{
  "name": "backend",
  "version": "0.1.0",
  "nodemonConfig": {
    "exec": "npm run server",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ],
    "events": {
      "start": "cls || clear"
    }
  },
  "scripts": {
    "server": "node -r dotenv/config ./src/index.js",
    "watch:dev": "nodemon",
    "start": "yarn watch:dev"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "dot-env": "0.0.1",
    "nodemon": "^1.19.3"
  },
  "dependencies": {
    "atob": "^2.1.2",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.5",
    "mongoose": "^5.9.5",
    "morgan": "^1.9.1",
    "ms": "^2.1.2",
    "nanoid": "^3.1.16",
    "secure-password": "^3.1.0"
  }
}
